#/bin/bash
export DEBUGVEGA=1

# incase you're building on a Mac
export GOOS=linux
export GOARCH=amd64

go build -v -gcflags "all=-N -l" -o "cmd/data-node/data-node-dbg-lin64" "./cmd/data-node"

mkdir -p docker/bin
cp -a cmd/data-node/data-node-dbg-lin64 docker/bin/data-node

# remove any existing image with that tag
docker rmi docker.pkg.github.com/vegaprotocol/data-node/data-node:local -f

docker build -t "docker.pkg.github.com/vegaprotocol/data-node/data-node:local" docker/
